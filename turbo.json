{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "public/build/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "coverage/**"
      ],
      "cache": true
    },
    "test:unit": {
      "dependsOn": [
        "build"
      ],
      "outputs": []
    },
    "test:integration": {
      "dependsOn": [
        "build"
      ],
      "outputs": []
    },
    "test:e2e": {
      "dependsOn": [
        "build"
      ],
      "outputs": []
    },
    "test:coverage": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "deploy": {
      "dependsOn": [
        "build",
        "test",
        "lint"
      ],
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}
